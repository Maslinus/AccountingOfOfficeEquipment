<!--
Файл ресурсов приложения.

Определяет:
- Запуск приложения с окна MainWindow
- Глобальные ресурсы: значения перечислений для XAML (через ObjectDataProvider)

Используется:
- Для привязки DataGridComboBoxColumn к Enum

Пример использования:
    ItemsSource="{Binding Source={StaticResource EquipmentTypeValues}}"
-->
    <Application x:Class="AccountingOfOfficeEquipment.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ObjectDataProvider x:Key="EquipmentTypeValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:EquipmentType" xmlns:models="clr-namespace:AccountingOfOfficeEquipment.Models"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="EquipmentStatusValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:EquipmentStatus" xmlns:models="clr-namespace:AccountingOfOfficeEquipment.Models"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Application.Resources>
</Application>