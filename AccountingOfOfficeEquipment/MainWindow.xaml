<!--
Главное окно приложения.

Отображает:
- Таблицу с данными об оборудовании
- Кнопки для добавления и удаления
- Выпадающие списки (ComboBox) для полей Статус и Тип

Привязка:
- DataContext -> MainViewModel
- ItemsSource -> Equipment
- SelectedItem -> SelectedEquipment

Пример поведения:
- Нажатие Add добавляет новую строку
- Нажатие Remove удаляет выбранную
-->
<Window x:Class="AccountingOfOfficeEquipment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AccountingOfOfficeEquipment.ViewModels"
        Title="Учет оборудования" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <StackPanel>
            <DataGrid ItemsSource="{Binding Equipment}" SelectedItem="{Binding SelectedEquipment}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                    <DataGridComboBoxColumn Header="Type" 
                                SelectedItemBinding="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding Source={StaticResource EquipmentTypeValues}}" />
                    <DataGridComboBoxColumn Header="Status" 
                                SelectedItemBinding="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding Source={StaticResource EquipmentStatusValues}}" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add" Command="{Binding AddCommand}" Width="100" Margin="0,0,10,0"/>
                <Button Content="Remove" Command="{Binding RemoveCommand}" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>